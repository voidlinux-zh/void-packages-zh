do_install() {
	vmkdir usr/share/icons
	vcopy Bibata-Modern-Ice usr/share/icons
	vcopy Bibata-Modern-Amber usr/share/icons
	vcopy Bibata-Modern-Classic usr/share/icons
	vcopy Bibata-Original-Ice usr/share/icons
	vcopy Bibata-Original-Amber usr/share/icons
	vcopy Bibata-Original-Classic usr/share/icons
}