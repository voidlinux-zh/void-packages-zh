do_install() {
    npm install -g --prefix "${DESTDIR}/usr" "${XBPS_SRCDISTDIR}/${pkgname}-${version}/v${version}.tar.gz"
    vlicense "${DESTDIR}/usr/lib/node_modules/@electron/asar/LICENSE.md"
}
