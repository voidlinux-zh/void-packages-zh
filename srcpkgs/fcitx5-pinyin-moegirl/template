# Template file for 'fcitx5-pinyin-moegirl'
pkgname=fcitx5-pinyin-moegirl
version=20231114
revision=1
short_desc="Fcitx 5 Pinyin Dictionary from zh.moegirl.org.cn"
maintainer="madoka773 <valigarmanda55@gmail.com>"
license="Unlicense"
makedepends="wget"
homepage="https://github.com/outloudvi/mw2fcitx"
depends="fcitx5 fcitx5-chinese-addons"

do_fetch() {
	wget ${homepage}/releases/download/${version}/moegirl.dict
}

do_install() {
	vinstall "${XBPS_BUILDDIR}/moegirl.dict" 0644 usr/share/fcitx5/pinyin/dictionaries/moegirl.dict
}
