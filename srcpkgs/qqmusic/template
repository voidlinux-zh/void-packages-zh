# Template file for 'qqmusic'
pkgname=qqmusic
version=1.1.5
revision=8
_electron_ver=24
archs="x86_64-glibc"
hostmakedepends="wget nodejs asar"
depends="electron${_electron_ver}"
short_desc="Tencent QQMusic, Run with system Electron."
maintainer="madoka773 <valigarmanda55@gmail.com>"
license="custom"
homepage="https://y.qq.com/"
repository=nonfree
restricted=yes

do_fetch() {
	wget https://test.mini-proxy.mivm.cn/qqmusic-electron/${pkgname}_${version}-${revision}.asar
}

do_extract() {
    asar ef ${XBPS_BUILDDIR}/${pkgname}_${version}-${revision}.asar logo.png
}

do_install() {
    cat > qqmusic << EOF
	#!/bin/sh
	exec electron${_electron_ver} /usr/lib/${pkgname}/app.asar "\$@"
EOF

    cat > qqmusic.desktop << EOF
    [Desktop Entry]
    Name=QQMusic
    Name[zh_CN]=QQ音乐
    Keywords=qqmusic
    Exec=/usr/bin/qqmusic %U
    Type=Application
    Icon=qqmusic
    StartupWMClass=qqmusic
    Comment=Tencent QQMusic
    Categories=AudioVideo;
EOF

    vmkdir usr/share/pixmaps
	vmkdir usr/lib/${pkgname}
    vinstall ${XBPS_BUILDDIR}/${pkgname}_${version}-${revision}.asar 644 usr/lib/${pkgname} app.asar
    vinstall qqmusic.desktop 644 usr/share/applications
    vinstall logo.png 644 usr/share/pixmaps ${pkgname}.png
	vbin qqmusic
}