# Template file for 'xray-geoip'
pkgname=xray-geoip
version=202312140039
revision=1
short_desc="GeoIP List for Xray"
maintainer="xiarenfan <xiarenfan1998@onionmail.com>"
license="CC-BY-SA-4.0"
makedepends="wget"
homepage="https://github.com/v2fly/geoip"

do_fetch() {
    wget ${homepage}/releases/download/${version}/geoip.dat
    wget ${homepage}/raw/master/LICENSE
}

do_install() {
    vinstall "${XBPS_BUILDDIR}/geoip.dat" 0644 usr/share/xray/geoip.dat
    vlicense "${XBPS_BUILDDIR}/LICENSE"
}
